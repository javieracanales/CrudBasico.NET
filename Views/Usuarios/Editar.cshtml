@model JavieraCanalesET.Models.UsuarioView

@{
    ViewBag.Title = "Editar Usuarios";
}

<h2>Editar Usuario</h2>

@using (Html.BeginForm("Editar","Usuarios",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
